{
  // "extends": "@textea/dev-kit/config/tsconfig.root.json", // todo: to remove
  "compilerOptions": {
    "paths": {
      "@ojemuyiwa/json-viewer": [
        "../src/index"
      ]
    },
    "jsx": "preserve",
    "incremental": true,
    "noEmit": true,
    // "target": "es5",
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
       "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
