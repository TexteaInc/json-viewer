{
  "compilerOptions": {
    "module": "es6",
    "target": "es2019",
    "outDir": "dist",
    "lib": ["dom", "dom.iterable", "es2020"],
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
